<div class="zone_recherche border">
	<h2 class="text-center mb-5">Recherche</h2>
	<div class="row">
		<div class="col-5">
			<div class="row-6">
				<legend class="h6">Choisissez votre Categorie</legend>
				<div class="form-group">
					<select id="select_category" class="custom-select form-control">
						<option hidden>Séléctionnez votre Categorie</option>
						{% for categories in category %}

							<option value="{{categories.name}}">{{categories.name}}</option>


						{% endfor %}
					</select>
				</div>
			</div>
			<div class="row-6">
				<div class="form-group">

					<label for="recherche">Recherche</label>

					<input id="recherche" class="form-control" type="text" name="recherche-index" placeholder="Recherche annonce">
				</div>

			</div>
			<button class="btn btn-primary">Recherche</button>
		</div>
		{# ******************************************************************************* #}

		<div class="col-7 cities_area">
			<div class="row-6">
				<div class="row">
					<div class="col">
						<div class="form-group">
							<legend class="h6">Choisissez votre Région</legend>
							<select id="select_region" class="custom-select  form-control">
								<option hidden>Séléctionnez votre région</option>
								{% for regions in region %}

									<option value="{{regions.codeRegion}}">{{regions.name}}</option>


								{% endfor %}
							</select>
						</div>
					</div>
					<div class="col">
						<div class="form-group">
							<legend class="h6">Choisissez votre Département</legend>
							<select id="select_departement" class="custom-select  form-control">
								<option hidden>Séléctionnez votre département</option>

							</select>
						</div>
					</div>
				</div>
				<div class="row-6">
					<div class="form-group">
						<label for="ville">Où ?
						</label>

						<input id="ville" class="form-control" type="text" placeholder="Recherche par ville" autocomplete="off">
						<div id="result_ville"></div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
